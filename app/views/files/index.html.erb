

<div class="row">
	<div class="span10">
		
		
		<% if flash[:error] %>
		<div class="alert alert-error">
			<%= flash[:error] %>
		</div>
		<% end %>


		<% if flash[:msg] %>
		<div class="alert alert-info">
			<%= flash[:msg] %>
		</div>
		<% end %>
		
		
		<small>if you have csv or excel file</small>
		<h1>Upload CSV/Excel File</h1>
		<%= form_tag '/upload', class: "well",multipart: true do %>
		  <label for="file">File to Upload</label> <%= file_field_tag "file" %>
		  <%= submit_tag "Upload",class: "btn btn-primary"  %>
		<% end %>
		
	</div>
	
	<div class="span2 center toptag">
		<small>Now we have records</small>
		<h1>
			<%= @records_counter %>
		</h1>
	</div>
	
</div>

<div class="row">
	<div class="span12">
		<%= link_to "Reset All Data",reset_path,class: "btn btn-danger",confirm: "This will delete all the data in database." %>
		<%= link_to "Clear All Uploaded Files", reset_files_path,class: "btn btn-danger",confirm: "This will delete all the uploaded files" %>
	</div>
</div>
